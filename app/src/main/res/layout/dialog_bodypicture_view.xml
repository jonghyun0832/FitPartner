<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity_frag_viewBodyPicture">

    <ImageView
        android:id="@+id/imageView_expansion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/guideline36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circlebutton" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="500dp" />

    <Button
        android:id="@+id/button_saveBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="갤러리에 저장하기"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/button_bestPick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_expansion" />

    <Button
        android:id="@+id/button_bestPick"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="최고의 사진 선택"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_saveBody"
        app:layout_constraintTop_toBottomOf="@+id/imageView_expansion" />

</androidx.constraintlayout.widget.ConstraintLayout>